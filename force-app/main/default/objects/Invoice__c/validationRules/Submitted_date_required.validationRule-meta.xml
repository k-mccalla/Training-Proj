<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Submitted_date_required</fullName>
    <active>true</active>
    <errorConditionFormula>ISPICKVAL(Status__c, &quot;Submitted&quot;)   &amp;&amp;   ISBLANK( Submitted_date__c )</errorConditionFormula>
    <errorDisplayField>Submitted_date__c</errorDisplayField>
    <errorMessage>Please enter a submitted date for this invoice</errorMessage>
</ValidationRule>
